{
    "parser": "@babel/eslint-parser",
    "env": {
        "browser": true,
        "es6": true,
        "jest/globals": true,
        "node": true,
    },
    "ignorePatterns": ["dist/*"],
    "extends": ["./config/eslint/browser", "prettier", "plugin:@typescript-eslint/recommended"],
    "parserOptions": {
        "sourceType": "module",
        "requireConfigFile": false,
    },
    "plugins": ["prettier", "jest"],
    "rules": {
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "prettier/prettier": "error",
    },
}
